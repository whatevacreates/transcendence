{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ES2017", "DOM"]
    },
    "include": ["src"]
}
